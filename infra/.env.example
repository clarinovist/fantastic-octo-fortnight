# ===========================================
# Lesprivate Docker Compose Environment
# ===========================================
# Copy this file to .env and adjust values as needed
# cp .env.example .env

# ===========================================
# Database Configuration (MySQL Container)
# ===========================================
MYSQL_ROOT_PASSWORD=password
MYSQL_DATABASE=lesprivate

# ===========================================
# Backend Application Configuration
# ===========================================
APP.ENV=development
APP.NAME=les-private
APP.PORT=8080
APP.URL=http://localhost:8080

# Database Write Configuration
DB.WRITE.HOST=mysql
DB.WRITE.NAME=lesprivate
DB.WRITE.USER=root
DB.WRITE.PASSWORD=password
DB.WRITE.PORT=3306
DB.WRITE.ENABLE_MIGRATION=true

# Database Read Configuration
DB.READ.HOST=mysql
DB.READ.NAME=lesprivate
DB.READ.USER=root
DB.READ.PASSWORD=password
DB.READ.PORT=3306

# Redis Configuration
REDIS.HOST=redis
REDIS.PORT=6379
REDIS.PASSWORD=
REDIS.DB=0

# JWT Configuration
JWT.KEY=your-super-secret-jwt-key-change-in-production
JWT.EXPIRES_IN=1h
JWT.REFRESH_EXPIRES_IN=24h

# ===========================================
# Service Ports (Host Ports)
# ===========================================
BACKEND_PORT=8080
ADMIN_PORT=3000
FRONTEND_PORT=3001
HOMEPAGE_PORT=5173

# ===========================================
# Next.js Applications Configuration
# ===========================================
NEXT_BASE_API_URL=http://localhost:8080

# ===========================================
# Google Services (Frontend)
# ===========================================
NEXT_GOOGLE_KEY=your-google-maps-api-key
NEXT_GOOGLE_AUTH_CLIENT_ID=your-google-oauth-client-id
NEXT_GOOGLE_AUTH_CLIENT_SECRET=your-google-oauth-client-secret
